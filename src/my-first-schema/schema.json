{
    "$schema": "http://json-schema.org/schema",
    "id": "my-first-schema",
    "title": "my1er Schema",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "default": "name"
      },
      "path": {
        "type": "string",
        "default": "app"
      },
      "appRoot": {
        "type": "string"
      },
      "sourceDir": {
        "type": "string",
        "default": "src/app"
      },
      "service": {
        "type": "boolean",
        "default": false,
        "description": "Flag to indicate whether service should be generated.",
        "alias": "vgs"
      }
    }
}